{
  "tasks": [
    {
      "type": "shell",
      "label": "Build Engine",
      "windows": {
        "command": "${workspaceFolder}/engine/build.bat"
      },
      "linux": {
        "command": "${workspaceFolder}/engine/build.sh"
      },
      "options": {
        "cwd": "${workspaceFolder}/engine"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "Build Test",
      "windows": {
        "command": "${workspaceFolder}/test/build.bat"
      },
      "linux": {
        "command": "${workspaceFolder}/test/build.sh"
      },
      "options": {
        "cwd": "${workspaceFolder}/test"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Build Everything",
      "windows": {
        "command": "${workspaceFolder}/build-all.bat",
      },
      "linux": {
        "command": "${workspaceFolder}/build-all.sh",
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}